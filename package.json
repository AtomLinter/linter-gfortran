{
  "name": "linter-gfortran",
  "main": "./lib/main",
  "version": "0.5.0",
  "description": "Lint Fortran files using gfortran",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luthaf/linter-gfortran"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.7.0 <2.0.0"
  },
  "configSchema": {
    "executable": {
      "type": "string",
      "default": "gfortran"
    },
    "gfortran_flags": {
      "type": "string",
      "default": "-Wall -Wextra"
    }
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^4.5.0",
    "atom-package-deps": "^4.0.1",
    "tmp": "^0.0.28"
  },
  "package-deps": [
    "linter"
  ],
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@commitlint/travis-cli": "^6.1.3",
    "@semantic-release/apm-config": "^2.0.1",
    "husky": "^0.14.3",
    "semantic-release": "^15.1.7",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0"
  },
  "release": {
    "extends": "@semantic-release/apm-config"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS"
  }
}