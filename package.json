{
  "name": "linter-gfortran",
  "main": "./lib/main",
  "private": true,
  "version": "1.0.0",
  "description": "Lint Fortran files using gfortran",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luthaf/linter-gfortran"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.7.0 <2.0.0"
  },
  "configSchema": {
    "executable": {
      "type": "string",
      "default": "gfortran"
    },
    "gfortran_flags": {
      "type": "string",
      "default": "-Wall -Wextra"
    }
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "atom --test spec"
  },
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "7.2.3",
    "tmp": "0.1.0"
  },
  "package-deps": [
    "linter:2.0.0"
  ],
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticCommits": true,
    "rangeStrategy": "pin",
    "packageRules": [
      {
        "packagePatterns": [
          "^eslint"
        ],
        "groupName": "ESLint packages"
      }
    ]
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-plugin-import": "2.20.1"
  }
}
